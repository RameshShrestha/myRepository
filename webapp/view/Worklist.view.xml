<mvc:View
	controllerName="com.ramesh.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="table"
				width="auto"
				mode = "MultiSelect"
				items="{
					path: '/calcView',
					sorter: {
						path: 'BONUS',
						descending: false
					}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished="onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<Button icon="sap-icon://add" press="addEmployee" tooltip="Add new Employee"/>
						<Button icon="sap-icon://delete" press="deleteEmployee" tooltip="Delete  Employee"/>
						<Button icon="sap-icon://edit" press="editEmployee" tooltip="Edit  Employee"/>
						<Button icon="sap-icon://save" press="saveEmployee" tooltip="Save Employee"/>
								<Button icon="sap-icon://refresh" press="refreshData" tooltip="Save Employee"/>
						
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column >
						<Text text="EMPLOYEE ID" />
					</Column>
					<Column >
						<Text text="EMPLOYEE NAME" />
					</Column>
					
					<Column  >
						<Text text="DATE OF JOINING"/>
					</Column>
						<Column >
						<Text text="SALARY" />
					</Column>
						<Column >
						<Text text="DEPARTMENT"/>
					</Column>
					<Column >
						<Text text="BONUS" />
					</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press="onPress">
						<cells>
							<ObjectIdentifier title="{EMPID}"/>
								<Input value="{EMPNAME}" editable="{worklistView>/editable}"/>
								<DatePicker editable="{worklistView>/editable}"	value="{path:'EMPDATE', type:'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true}}" />
						<!--		<Text text="{path:'EMPDATE', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'MM/dd/YYYY'} }" />-->
								<Input value="{SAL}" editable="{worklistView>/editable}"/>
								<Input value="{DEPTNAME}" editable="{worklistView>/editable}"/>
								<Input value="{BONUS}" editable="{worklistView>/editable}"/>
							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>


	</semantic:SemanticPage>

</mvc:View>