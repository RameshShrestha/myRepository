<mvc:View controllerName="com.ramesh.miizRotateText.controller.MannualEntryView" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core" class="sapUiSizeCompact" >
	<App id="mainApp">
		<pages>
			<Page title="{i18n>title}" showHeader="false">
