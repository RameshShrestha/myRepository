											forceSelection="false"
											selectedKey="{/0/key}"
											items="{
												path: '/'
											}">
											<core:Item key="{key}" text="{text}" />
										</Select>
							
								</VBox>	-->
								<VBox class="sapUiTinyMarginBegin" width ="310px" >
								
										<Label text="Process Area :" />
								
								<HBox>
									
									
								<Button id="openMenu" text="Area" width="300px" press="handlePressOpenMenu" icon="sap-icon://drop-down-list" iconFirst = "false" />
								<Text id="idSelected" text=""/>
									</HBox>
								</VBox>
							
									<VBox class="sapUiTinyMarginBegin">
								
										<Label text="Time Frame :" />
										<Select id="timeFrame"
											forceSelection="false"
											selectedKey="{/0/key}"
											items="{
												path: '/'
											}">
											<core:Item key="{ key}" text="{path:'text',	formatter: '.formatter.addText'}" />
										</Select>
								
								</VBox>
							<!--	<VBox class="sapUiTinyMarginBegin">
										<Label text="From- to" />
								
											<DateRangeSelection	  id="fromDate" displayFormat="dd/MM/yyyy"	/>
							</VBox>-->
								<VBox class="sapUiTinyMarginBegin">
										<Label text="" />
							<HBox alignContent = "Center" justifyContent= "Center">
											<Button	  id="goButton" text="Go" type="Emphasized" press="getMetricTiles" class="sapUiTinyMarginBegin"	/>
											<Button text="Submit" press="onSave" type="Emphasized" class="sapUiTinyMarginBegin"/>
											</HBox>
							</VBox>
							<!--	<HBox alignContent = "Center" justifyContent= "Center">
								<Button text="Submit" press="onSave" />
							</HBox>-->
