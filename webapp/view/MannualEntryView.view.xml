								<VBox width="100%">
									<l:Grid id="ServiceLayout">
										<l:content></l:content>
											 <l:layoutData>
        								<l:GridData span="L3 M4 S6"></l:GridData>
    									</l:layoutData>
									</l:Grid>
								</VBox>
							</HBox>
							<HBox class="container">
								<VBox class="firstTextCol" width="35px" alignContent="Center" alignItems="Center"  justifyContent= "Center">
									<Text class="myStyle" text="Cost"/>
								</VBox>
								<VBox width="100%">
									
									<l:Grid  id="CostLayout">
										<l:content></l:content>
										  	 <l:layoutData>
        								<l:GridData span="L3 M4 S6"></l:GridData>
    									</l:layoutData>
									</l:Grid>
								</VBox>
							</HBox>
							<HBox class="container">
								<VBox class="firstTextCol" width="35px" alignContent="Center" alignItems="Center"  justifyContent= "Center">
									<Text class="myStyle" text="Sustainability"/>
								</VBox>
								<VBox width="100%">
									<l:Grid id="OtherLayout">
										<l:content></l:content>
											 <l:layoutData>
        								<l:GridData span="L3 M4 S6"></l:GridData>
    									</l:layoutData>
									</l:Grid>
								</VBox>
							</HBox>
