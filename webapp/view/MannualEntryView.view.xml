							<Image src="./images/mcLogo.PNG" width="100%" height="60px" alt="Millercoors logo" ></Image>
							<List id="ShortProductList" class="listBar" >
								<items class="listitems">
									<StandardListItem title="Home"  icon="sap-icon://home" iconDensityAware="false" iconInset="false" class="listitems"
										adaptTitleSize="true" type="Active"  press="navigateHome"/>
								
								</items>
							</List>
						
						</VBox>
						
						<VBox width="82%" >
							<HBox height="60px">
								<Text text="Manual Data Entry" width="350px" class="titleTop"/>
